@model List<Testimonial>
@{
    ViewData["Title"] = "ListTestimonials";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
     <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>Referanslar</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İsim</th>
                                <th>Ünvan</th>
                                <th>İçerik</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                    <tr>
                                <th>@item.TestimonialID</th>
                                <td>@item.Name</td>
                                <td><span class="badge badge-primary px-2">@item.Title</span>
                                </td>
                                <td>@item.Description</td>
                                <td><a href="/Testimonial/GetTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-success"><i class="fas fa-edit"></i></a></td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
            }
                                           

                        </tbody>
                    </table>
                <a href="/Testimonial/AddTestimonial/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Referans</a>
                </div>
            </div>
        </div>
    </div>
</div>

