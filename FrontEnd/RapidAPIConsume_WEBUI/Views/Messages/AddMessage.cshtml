@model SendMessage
@{
    ViewData["Title"] = "Mesaj Oluştur";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @await Component.InvokeAsync("AdminMailLeftBox")
                <div class="email-right-box">
                    <div class="toolbar" role="toolbar">
                    </div>
                    <div class="compose-content mt-5">
                        <form method="post">
                            <div class="form-group">
                                <input type="email" asp-for="ReceiverMail" class="form-control bg-transparent" placeholder="Alıcı mail">
                            <span class="text-danger" asp-validation-for="ReceiverMail"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="ReceiverName" class="form-control bg-transparent" placeholder="Alıcı isim">
                                <span class="text-danger" asp-validation-for="ReceiverName"></span>
                            </div>
                             <div class="form-group">
                                <input type="text" asp-for="Title" class="form-control bg-transparent" placeholder="Başlık">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <textarea class="textarea_editor form-control bg-light" asp-for="Content" rows="15" placeholder="Mesajınız..."></textarea>
                                <span class="text-danger" asp-validation-for="Content"></span>
                            </div>
                            <div class="text-left m-t-15">
                        <button class="btn btn-info m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                        <a href="/Messages/SendMessages/" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20"><i class="ti-close m-r-5 f-s-12"></i> İptal Et</a>
                    </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

