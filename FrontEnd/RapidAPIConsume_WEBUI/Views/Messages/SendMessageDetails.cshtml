@model SendMessage
@{
    ViewData["Title"] = "Gönderilen Mesaj Detayları";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @await Component.InvokeAsync("AdminMailLeftBox")
                <div class="email-right-box">
                    <div class="toolbar" role="toolbar">
                        <div class="btn-group m-b-20">
                            <a href="/Message/DeleteSendMessage/@Model.SendMessageID" class="btn btn-light"><i class="fa fa-trash"></i></a>
                        </div>
                    

                    </div>
                    <div class="read-content">
                        <div class="media pt-5">
                            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/7.jpg">
                            <div class="media-body">
                                <h5 class="m-b-3">@Model.ReceiverName</h5>
                                <p class="m-b-2">@(((DateTime)(Model.Date)).ToString("dd-MM-yyyy"))</p>
                            </div>
                                            
                        </div>
                        <hr>
                        <div class="media mb-4 mt-1">
                            <div class="media-body"><span class="float-right">@(((DateTime)(Model.Date)).ToString("HH:mm"))</span>
                                <h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">From: @Model.SenderMail</small><br />
                                <small class="text-muted">To: @Model.ReceiverMail</small>
                            </div>
                        </div>
                     
                        <p>@Model.Content
                        </p>
                        <p>@Model.SenderName</p>


                    </div>
                  
                </div>
            </div>
        </div>
    </div>
</div>
