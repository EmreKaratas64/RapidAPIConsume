@model List<Contact> 
@{
    ViewData["Title"] = "ContactMessages";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

    <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                @await Component.InvokeAsync("AdminMailLeftBox")

                <div class="email-right-box">
                    <div role="toolbar" class="toolbar">
                        <div class="btn-group">
                            <button  class="btn btn-dark" type="button">Gelen Kutusu
                            </button>
                        </div>
                    </div>
                    <div class="email-list m-t-15">
                        @foreach (var item in Model)
                        {
                            <div class="message">
                            <a href="/Messages/ContactMessageDetails/@item.ContactID">
                                <div class="col-mail col-mail-1">
                                    <div class="email-checkbox">
                                        <input type="checkbox" id="chk2">
                                        <label class="toggle" for="chk2"></label>
                                    </div>
                                </div>
                                <div class="col-mail col-mail-2">
                                    <div class="subject">@item.Subject</div>
                                    <div class="date">@(((DateTime)(item.Date)).ToString("dd-MM-yyyy"))</div>
                                </div>
                            </a>
                        </div>
                        }
                        
                        

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

