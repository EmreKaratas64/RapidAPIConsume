
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin Dashboard - HotelAPI</title>

    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/images/favicon.png">

    <link href="~/adminweb/plugins/pg-calendar/css/pignose.calendar.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/adminweb/plugins/chartist/css/chartist.min.css">
    <link rel="stylesheet" href="~/adminweb/plugins/chartist-plugin-tooltips/css/chartist-plugin-tooltip.css">

    <link href="~/adminweb/css/style.css" rel="stylesheet">

</head>

<body>

    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="nav-header">
            <div class="brand-logo">
                <a href="index.html">
                    <b class="logo-abbr"><img src="~/adminweb/images/logo.png" alt=""> </b>
                    <span class="logo-compact"><img src="~/adminweb/images/logo-compact.png" alt=""></span>
                    <span class="brand-title">
                        <img src="~/adminweb/images/logo-text.png" alt="">
                    </span>
                </a>
            </div>
        </div>

        @await Html.PartialAsync("~/Views/AdminLayout/AdminNavHeader.cshtml")

        @await Html.PartialAsync("~/Views/AdminLayout/AdminSidebar.cshtml")

        <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-1">
                            <div class="card-body">
                                <h3 class="card-title text-white">Müşteriler</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">@ViewBag.Guests</h2>
                                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.ToString("yyyy")</p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-shopping-cart"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-2">
                            <div class="card-body">
                                <h3 class="card-title text-white">Çalışanlar</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">@ViewBag.Staffs</h2>
                                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.ToString("yyyy")</p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-3">
                            <div class="card-body">
                                <h3 class="card-title text-white">Odalar</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">@ViewBag.Rooms</h2>
                                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.ToString("yyyy")</p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-building"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-4">
                            <div class="card-body">
                                <h3 class="card-title text-white">Rezervasyonlar</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">@ViewBag.Bookings</h2>
                                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.ToString("yyyy")</p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-money"></i></span>
                            </div>
                        </div>
                    </div>
                </div>

                @await Component.InvokeAsync("DashboardLast4Staff")
                
                @await Component.InvokeAsync("DashboardLast6Bookings")
                           

                @await Component.InvokeAsync("DashboardSocialMedias")
                
            </div>
            <!-- #/ container -->
        </div>
      
        @await Html.PartialAsync("~/Views/AdminLayout/AdminFooter.cshtml")

    </div>

    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>

    <script src="~/adminweb/plugins/chart.js/Chart.bundle.min.js"></script>

    <script src="~/adminweb/plugins/circle-progress/circle-progress.min.js"></script>

    <script src="~/adminweb/plugins/d3v3/index.js"></script>
    <script src="~/adminweb/plugins/topojson/topojson.min.js"></script>
    <script src="~/adminweb/plugins/datamaps/datamaps.world.min.js"></script>

    <script src="~/adminweb/plugins/raphael/raphael.min.js"></script>
    <script src="~/adminweb/plugins/morris/morris.min.js"></script>

    <script src="~/adminweb/plugins/moment/moment.min.js"></script>
    <script src="~/adminweb/plugins/pg-calendar/js/pignose.calendar.min.js"></script>

    <script src="~/adminweb/plugins/chartist/js/chartist.min.js"></script>
    <script src="~/adminweb/plugins/chartist-plugin-tooltips/js/chartist-plugin-tooltip.min.js"></script>

    <script src="~/adminweb/js/dashboard/dashboard-1.js"></script>

</body>

</html>