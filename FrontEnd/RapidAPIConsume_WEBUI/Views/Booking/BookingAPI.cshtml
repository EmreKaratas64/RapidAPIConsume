@model List<BookingAPIResults.Result>
@{
    ViewData["Title"] = "Rezervasyon API";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

  @using (Html.BeginForm("BookingAPI", "Booking", FormMethod.Get))
    {
        <label>Şehir Id Giriniz</label>
        <input type="text" class="form-control" name="cityId" />
        <br />
        <button class="btn btn-outline-info">Otelleri Getir</button>
    }
    <br />
<div class="row">

    @foreach (var item in Model)
    {
           <div class="col-md-6 col-lg-3">
        <div class="card">
            <img class="img-fluid" src="@item.photoMainUrl" alt="" style="height:540px;">
            <div class="card-body">
                <h5 class="card-title">@item.name</h5>
            </div>
            <div class="card-footer">
                <p class="card-text d-inline"><small class="text-muted">Puan: @item.reviewScore &nbsp; Oy Sayısı: @item.reviewCount</small>
                </p><a href="#" class="btn btn-outline-info card-link float-right"><small>Detaylar</small></a>
            </div>
        </div>
    </div>
    }
   
</div>

