 <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Misafir</h4>
                <div class="basic-form">
                    <form method="post">
                        @for(int i=0;i<Model.Count;i++)
                    {
                         <div class="form-group row">
                            <div class="col-sm-10">
                                <input type="hidden" asp-for="@Model[i].RoleId" class="form-control">
                                <input type="hidden" asp-for="@Model[i].RoleName" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12 form-check form-check-inline">
                                 <label class="form-check-label">
                                <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input">
                                </label>
                                <label class="form-check-label" for="@Model[i].RoleExists">@Model[i].RoleName</label>
                            </div>
                        </div>
                    }
                    <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

