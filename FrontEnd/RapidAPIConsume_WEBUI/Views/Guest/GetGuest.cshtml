@model UpdateGuestDto
@{
    ViewData["Title"] = "GetGuest";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

 <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Misafir</h4>
                <div class="basic-form">
                    <form method="post">
                        <input type="hidden" asp-for="GuestID" >
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ad</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Soyisim</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Surname" class="form-control">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Şehir</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="City" class="form-control">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                         
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


