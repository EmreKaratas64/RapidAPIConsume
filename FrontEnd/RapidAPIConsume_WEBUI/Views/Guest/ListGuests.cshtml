@model List<Guest>
@{
    ViewData["Title"] = "ListGuests";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="row">
     <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>Misafirler</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İsim</th>
                                <th>Soyisim</th>
                                <th>Şehir</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                count++;
                    <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td><span class="badge badge-info px-2">@item.City</span>
                                </td>
                                <td><a href="/Guest/GetGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-success"><i class="fas fa-edit"></i></a></td>
                                <td><a href="/Guest/DeleteGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
            }
                                           

                        </tbody>
                    </table>
                <a href="/Guest/AddGuest/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Misafir</a>
                </div>
            </div>
        </div>
    </div>
</div>


