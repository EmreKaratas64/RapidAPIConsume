@model List<Booking>
 <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Müşteri</th>
                                    <th>Mail</th>
                                    <th>Durum</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                 <tr>
                                 
                                    <td>@item.Name</td>
                                    <td>
                                        <span>@item.Mail</span>
                                    </td>
                                        @if(item.Status == BookingStatus.Onaylandı)
                                        {
                                              <td><i class="fa fa-circle-o text-success  mr-2"></i> Onaylandı</td>
                                        }
                                        else if(item.Status == BookingStatus.IptalEdildi){
                                            <td><i class="fa fa-circle-o text-danger  mr-2"></i> İptal Edildi</td>
                                        }
                                         else{
                                            <td><i class="fa fa-circle-o text-warning  mr-2"></i> Bekleniyor</td>
                                        }
                                      
                                    <td>
                                        <span>@item.City</span>
                                        <span class="m-0 pl-3"></span>
                                    </td>
                                    <td>@item.Country</td>
                                </tr>
                                }
                        
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>                        
    </div>
</div>    