@model List<WorkLocation>
@{
    ViewData["Title"] = "ListWorkLocations";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="row">
     <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>İş Lokasyonları</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İş Lokasyon Adı</th>
                                <th>İş Lokasyonu</th>
                                 <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                count++;
                    <tr>
                                <th>@count</th>
                                <td>@item.WorkLocationName</td>
                                <td>@item.WorkLocationCity</td>
                                <td><a href="/Locations/GetWorkLocation/@item.WorkLocationID" class="btn mb-1 btn-rounded btn-outline-success"><i class="fas fa-edit"></i></a></td>
                            </tr>
            }
                                           

                        </tbody>
                    </table>
                <a href="/Locations/AddWorkLocation/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Lokasyon</a>
                </div>
            </div>
        </div>
    </div>
</div>

