@model List<Staff>
@{
    ViewData["Title"] = "Çalışanlar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
     <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>Personeller</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İsim</th>
                                <th>Ünvan</th>
                                <th>Sosyal Medya1</th>
                                <th>Sosyal Medya2</th>
                                <th>Sosyal Medya3</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                    <tr>
                                <th>@item.StaffID</th>
                                <td>@item.Name</td>
                                <td><span class="badge badge-primary px-2">@item.Title</span>
                                </td>
                                <td>@item.SocialMedia1</td>
                                <td>@item.SocialMedia2</td>
                                <td>@item.SocialMedia3</td>
                                <td><a href="/Staff/GetStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-success"><i class="fas fa-edit"></i></a></td>
                                <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
            }
                                           

                        </tbody>
                    </table>
                <a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Personel</a>
                </div>
            </div>
        </div>
    </div>
</div>

     