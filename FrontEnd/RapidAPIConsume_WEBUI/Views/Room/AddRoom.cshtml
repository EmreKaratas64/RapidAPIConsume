@model AddRoomDto
@{
    ViewData["Title"] = "Oda Ekle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

 <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Oda</h4>
                <div class="basic-form">
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Oda Numarası</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="RoomNumber" class="form-control">
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Resim</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="RoomCoverImage" class="form-control">
                                <span asp-validation-for="RoomCoverImage" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Fiyat</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Price" class="form-control">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Başlık</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Title" class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Yatak Sayısı</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="BedCount" class="form-control">
                                <span asp-validation-for="BedCount" class="text-danger"></span>
                            </div>
                        </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Banyo Sayısı</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="BathCount" class="form-control">
                                <span asp-validation-for="BathCount" class="text-danger"></span>
                            </div>
                        </div>
                            <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Wifi</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Wifi" class="form-control">
                                <span asp-validation-for="Wifi" class="text-danger"></span>
                            </div>
                        </div>
                           <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Açıklama</label>
                            <div class="col-sm-10">
                                  <textarea class="form-control h-150px" asp-for="Description" rows="6" ></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                              </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-info">Ekle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

