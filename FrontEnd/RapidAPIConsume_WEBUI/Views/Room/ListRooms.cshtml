@model List<Room>
@{
    ViewData["Title"] = "Odalar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="row">
     <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>Personeller</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Oda Numarası</th>
                                <th>Fiyat</th>
                                <th>Başlık</th>
                                <th>Yatak Sayısı</th>
                                <th>Banyo Sayısı</th>
                                <th>Wifi</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                count++;
                    <tr>
                                <th>@count</th>
                                <td>@item.RoomNumber</td>
                                <td>@item.Price</td>
                                <td>@item.Title</td>
                                <td>@item.BedCount</td>
                                <td>@item.BathCount</td>
                                <td>@item.Wifi</td>
                                <td><a href="/Room/GetRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-success"><i class="fas fa-edit"></i></a></td>
                                <td><a href="/Room/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
            }
                                           

                        </tbody>
                    </table>
                <a href="/Room/AddRoom/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Oda</a>
                </div>
            </div>
        </div>
    </div>
</div>


